#!/bin/bash
# MagicPods UI Launcher

# Check if MagicPodsCore service is running
if ! systemctl is-active --quiet magicpods.service; then
    echo "Warning: MagicPods Core service is not running."
    echo "Please start the service with: sudo systemctl start magicpods.service"
    echo "To enable it on boot: sudo systemctl enable magicpods.service"
    echo ""
    read -p "Do you want to continue anyway? (y/N) " -n 1 -r
    echo
    if [[ ! $REPLY =~ ^[Yy]$ ]]; then
        exit 1
    fi
fi

# Change to the UI directory and run with the virtual environment Python
cd /opt/magicpods/ui
exec /opt/magicpods/venv/bin/python main.py

